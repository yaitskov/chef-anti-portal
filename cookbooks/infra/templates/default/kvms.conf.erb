<% @zones.each do |zone| %>

<% if zone.key?('domain') %>
zone "<%= zone.domain %>" IN {
     type master;
     file "/var/lib/bind/zones/<%= zone.domain %>.db";
};
<% end %>

zone "<%= zone.subnet.reverse.join(".") %>.in-addr.arpa" {
     type master;
     file "/var/lib/bind/zones/rev.<%= zone.subnet.reverse.join(".") %>.in-addr.arpa";
};

<% end %>
